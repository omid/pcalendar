#!/bin/sh

set -e

case "$1" in
    upgrade)
        if [ -e /usr/share/pcalendar ]
        then
          rm -rf /usr/share/pcalendar
        fi

        if [ -e /usr/bin/pcalendar.php ]
        then
          rm -rf /usr/bin/pcalendar.php
        fi

        if [ -e /etc/php5/conf.d/php_gtk2.ini ]
        then
          rm -rf /etc/php5/conf.d/php_gtk2.ini
        fi

    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
