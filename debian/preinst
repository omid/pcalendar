#!/bin/sh

set -e

case "$1" in
    upgrade)
        if [ -e /usr/share/pcalendar ]
        then
          rm -rf /usr/share/pcalendar
        fi

        if [ -e /usr/bin/pcalendar.php ]
        then
          rm -rf /usr/bin/pcalendar.php
        fi

	if [ -e /usr/share/gnome-shell/extensions/pcalendar@gnome-shell-extensions.gnome.org ]
        then
          rm -rf /usr/share/gnome-shell/extensions/pcalendar@gnome-shell-extensions.gnome.org
        fi

    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
